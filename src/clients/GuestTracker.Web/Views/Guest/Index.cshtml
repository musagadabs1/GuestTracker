@model IEnumerable<GuestTracker.DAL.Models.VisitDetail>

@{
    ViewData["Title"] = "Index";
}

<h1>Visitors</h1>

<p>
    <a asp-action="Create">Sign In</a>
</p>

@if (ViewBag.Error != null)
{
    <span style="color:red;">@ViewBag.Error.ToString()</span>
}

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>
                Guest Name
            </th>
            <th>
                Sign In Time
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GuestName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SignInTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Visit_Detail_Id">Visit Details</a> |
                    @*<a asp-action="Details" asp-route-id="@item.Visit_Detail_Id">Details</a> |*@
                    <a asp-action="SignOut" asp-route-id="@item.Visit_Detail_Id">Sign Out</a>
                </td>
            </tr>
        }
    </tbody>
</table>
